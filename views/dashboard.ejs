<!DOCTYPE html>
<html>
<head>
  <title>Dashboard</title>
  <link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/normalize/7.0.0/normalize.min.css">
  <link href="https://fonts.googleapis.com/css?family=Lato|Raleway" rel="stylesheet">
  <link rel="stylesheet" type="text/css" href="/styles/application.css">
</head>
<body>

  <div class='container'>
    <header>
      <article>
        <img class='logo' src= 'img/icon-placeholder.png'>
      </article>
      <article>
        <h2 class='username'> MyTravels</h2>
      </article>
      <article class="profile-wrap">
         <img class='profileimg' src= '<%= user.profilePhoto %>'>
          <%= user.firstName + ' ' + user.lastName %>
         [<a href='/logout'>logout</a>]
      </article>

    </header>

    <div id='map'></div>
    <button id='display-switch'>Create New Location</button>
    <ul id='city-list'></ul>

    <form id='location-form' action='/users/<%= user._id %>/location' method='post'>
      <h3>Add a Location</h3>
      <div class='form-container'>
        <div>
          <label>City</label>
          <input name='city' id='city'>
        </div>
        <div>
          <label>Country</label>
          <input name='country' id='country'>
        </div>
        <div>
          <label>Longitude</label>
          <input type='hidden' name='long' id='long'>
        </div>
        <div>
          <label>Latitude</label>
          <input type='hidden' name='lat' id='lat'>
        </div>
        <div>
          <input id='form-userid' type='hidden' name='userid' value='<%= user._id %>'>
        <button type='submit'>Submit</button>
      </div>
    </form>

  </div>


<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script src="/js/main.js" type="text/javascript"></script>
<script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyBV06Rqe2o_LP8qqrSeusRqs2VSNxAFMrU"></script>
</body>
</html>
